#!/usr/bin/python3
# GENOCIDE - the king of the netherlands commits genocide - OTP-CR-117/19/001 - otp.informationdesk@icc-cpi.int - https://genocide.rtfd.io
#
#

import os, sys ; sys.path.insert(0, os.getcwd())
from ol.spc import Console, boot, cmd, execute, ol, os, pwd, sys, time

def main():
    name = "genocide"
    ol.wd = os.path.expanduser("~/.%s" % name)
    wait = False
    k = boot(name)
    if "b" in k.cfg.opts:
        print("%s started at %s" % (name.upper(), time.ctime(time.time())))
        print(ol.format(k.cfg))
    if k.cfg.txt:
        return cmd(k.cfg.otxt)
    if "r" in k.cfg.opts:
        privileges(name)
        scandir(k.cfg.md, "gmod")
    if "w" in k.cfg.opts:
        wait = True
    k.start()
    k.init(k.cfg.mods, k.cfg.exc)
    if "i" in k.cfg.opts:
        from gmod.irc import IRC
        i = IRC()
        i.start()
        wait = True
    if "s" in k.cfg.opts and not "d" in k.cfg.opts:
        c = Console()
        c.start()
    if wait:
        k.wait()
         
execute(main)
os._exit(0)
