from ol.spc import Console, boot, cmd, execute, ol, os, privileges, pwd, root, scandir, sys

def main():
    if not root():
        print("you need root privileges")
        return
    k = boot("genocide")
    if k.cfg.txt: return cmd(k.cfg.otxt)
    if "b" in k.cfg.opts:
        print("%s started at %s" % (name.upper(), time.ctime(time.time()))) 
        print(ol.format(k.cfg))
    privileges("genocide")
    scandir(k.cfg.md, "gmod")
    k.start()
    k.init(k.cfg.mods, k.cfg.exc)
    k.wait()
 
execute(main)
os._exit(0)
