scan(irc, False)
scan(mdl, False)
scan(rss, False)


def daemon():
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    os.umask(0)
    si = open("/dev/null", 'r')
    so = open("/dev/null", 'a+')
    se = open("/dev/null", 'a+')
    os.dup2(si.fileno(), sys.stdin.fileno())
    os.dup2(so.fileno(), sys.stdout.fileno())
    os.dup2(se.fileno(), sys.stderr.fileno())


def signal_HUP(sig, frame):
    print("signal 15 called")
    sys.stdout.flush()


#signal.signal(signal.SIGHUP, signal_HUP)

from genocide.mdl import init


def main():
    #daemon()
    irc.init()
    rss.init()
    mdl.init()
    while 1:
        time.sleep(1.0)


main()
