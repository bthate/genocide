# pylint: disable=C0114,C0115,C0116,W0703


import os
import sys


os.environ["PATH"] += ":bin"


def popen(txt):
    for line in os.popen(txt).readlines():
        print(line.rstrip())
        sys.stdout.flush()



def main():
    popen("rm -fR build dist MANIFEST *.egg-info *.whl")
    popen("rm -fR .pytest_cache .test  __pycache__ *~ .*~")
    popen('rm -fR html docs/genocide.*.rst')
    popen("loop . rm -fR *~")
    popen("loop . rm -fR __pycache__")
    if "-f" in sys.argv:
        popen("rm -fR env")

if __name__ == "__main__":
    main()
