#!/usr/bin/python3
# OPERBOT - pure python3 IRC bot (bin/test)
#
# this file is placed in the public domain

"operbot unittests"

# imports

import os, sys ; sys.path.insert(0, os.getcwd())

import op
import time
import unittest

from op.prs import parse_cli
from op.trm import execute

# defines

test_path = os.getcwd() + os.sep + "test"
wd = os.path.expanduser("~/.test")

# functions

def open(txt):
    try:
        for line in os.popen(txt).readlines():
            print(line.rstrip())
    except:
        pass

def main():
    open("rm -fR ~/.test")
    op.debug = True
    cfg = parse_cli(wd)
    if cfg.txt:
        pat = "test_%s*" % cfg.txt
    else:
        pat = "test*"
    suite = unittest.loader.TestLoader().discover(test_path, pattern=pat)
    unittest.TextTestRunner(verbosity=3).run(suite)

# runtime

execute(main)
os._exit(0)
